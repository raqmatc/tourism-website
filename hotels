  <style>
    body {
      background-color: #f7f7f7;
      font-family: 'Cairo', sans-serif;
    }

    .hotel-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      padding: 15px;
      margin-bottom: 20px;
    }

    .hotel-card h5 {
      margin-bottom: 5px;
    }

    .hotel-card p {
      margin: 0;
      font-size: 14px;
      color: #555;
    }

    .header {
      background-color: #222;
      color: #fff;
      padding: 15px;
      text-align: center;
    }
  </style>
