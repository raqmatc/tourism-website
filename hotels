<body>

  <div class="header">
    <h4>نتائج الفنادق</h4>
  </div>

  <div class="container mt-4" id="hotels-container">
    <p>جاري تحميل الفنادق...</p>
  </div>

  <script>
    const apiKey = "UspRLCHI82AtaL2AsflFSLYxrRh0asMB";
    const apiSecret = "R1ZGO9tgOA4P5EPJ";

    async function getAccessToken() {
      const response = await fetch("https://test.api.amadeus.com/v1/security/oauth2/token", {
        method: "POST",
        headers: { "Content-Type": "application/x-www-form-urlencoded" },
        body: new URLSearchParams({
          grant_type: "client_credentials",
          client_id: apiKey,
          client_secret: apiSecret
        })
      });

      const data = await response.json();
      return data.access_token;
    }

    function getQueryParams() {
      const params = new URLSearchParams(window.location.search);
      return {
        city: params.get("city"),
        checkin: params.get("checkin"),
        checkout: params.get("checkout")
      };
    }

    async function searchHotels(token, city, checkin, checkout) {
      const response = await fetch(`https://test.api.amadeus.com/v2/shopping/hotel-offers?cityCode=${await getCityCode(city)}&checkInDate=${checkin}&checkOutDate=${checkout}&adults=1`, {
        headers: {
          Authorization: `Bearer ${token}`
        }
      });
      return await response.json();
    }

    async function getCityCode(cityName) {
      const response = await fetch(`https://test.api.amadeus.com/v1/reference-data/locations?subType=CITY&keyword=${encodeURIComponent(cityName)}&view=FULL`, {
        headers: {
          Authorization: `Bearer ${await getAccessToken()}`
        }
      });

      const data = await response.json();
      if (data && data.data && data.data.length > 0) {
        return data.data[0].iataCode;
      } else {
        throw new Error("لم يتم العثور على المدينة");
      }
    }

    async function showHotels() {
      const { city, checkin, checkout } = getQueryParams();
      const container = document.getElementById("hotels-container");

      try {
        const token = await getAccessToken();
        const result = await searchHotels(token, city, checkin, checkout);

        container.innerHTML = "";

        if (result.data && result.data.length > 0) {
          result.data.forEach(hotel => {
            const name = hotel.hotel.name || "فندق غير معروف";
            const address = hotel.hotel.address?.lines?.join(", ") || "بدون عنوان";
            const price = hotel.offers[0]?.price?.total || "غير متوفر";
            const currency = hotel.offers[0]?.price?.currency || "USD";

            const card = document.createElement("div");
            card.className = "hotel-card";

            card.innerHTML = `
              <h5>${name}</h5>
              <p>العنوان: ${address}</p>
              <p>السعر: ${price} ${currency}</p>
            `;

            container.appendChild(card);
          });
        } else {
          container.innerHTML = "<p>لم يتم العثور على فنادق</p>";
        }
      } catch (err) {
        console.error(err);
        container.innerHTML = "<p>حدث خطأ أثناء تحميل البيانات</p>";
      }
    }

    showHotels();
  </script>

</body>
</html>
